<%

require "rubygems"
require "bunny"

conn = Bunny.new
conn.start

ch = conn.create_channel
q  = ch.queue("bunny.examples.hello_world", :auto_delete => true)
x  = ch.default_exchange

q.subscribe do |delivery_info, metadata, payload|
  puts "Received #{payload}"
end

x.publish("Hello!", :routing_key => q.name)

sleep 1.0
conn.close
%>

<h1>Make a Survey Link</h1>

<% @surveylink.errors.messages.each do |attr, message| %>
  <p>error on <%= attr %><%= message %></p>
<% end %>

<%= form_for(@surveylink) do |f| %>
  <%= f.label(:link) %><br>
  <%= f.text_field(:link) %><br>


  <%= f.submit %>
<% end %>


